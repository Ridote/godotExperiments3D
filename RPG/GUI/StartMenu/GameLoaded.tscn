script/source = "extends HBoxContainer

# could perhaps be this name any longer?
const GAME_LOADED_CHARACTERS_FACTORY = preload(\"res://GUI/StartMenu/GameLoadedCharacters.tscn\")

onready var charactersPortraits : HBoxContainer = $VBoxContainer/Characters

var id = -1

# TODO
# warning-ignore-all:unused_argument
func initialise(_id : int, time : int, lock : bool, users: Array, characters : Array):
	id = _id
	
	for user in users:
		var portraits = GAME_LOADED_CHARACTERS_FACTORY.instance()
		var characterList = []
		for character in characters:
			if(character.owner == user.ID):
				characterList.append(character)
		charactersPortraits.add_child(portraits)
		portraits.initialise(user.username, characterList)"

