[sub_resource type="GDScript" id=1]
script/source = "extends PanelContainer

signal error(msg)
signal success(msg)

onready var sendButton = $VBoxContainer/Send
onready var username = $VBoxContainer/HBoxContainer/VBoxContainer2/usernameEdit
onready var password = $VBoxContainer/HBoxContainer/VBoxContainer2/passwordEdit

func _ready():
	sendButton.connect(\"pressed\", self, \"sendLogin\")
	Network.serverResponse.connect(\"auth_success\", self, \"on_authentication\")
func sendLogin():
	Network.clientRequest.login(username.text, password.text)

func on_authentication(success, state):
	if(!success):
		emit_signal(\"error\", state)
	else:
		emit_signal(\"success\", state)"

